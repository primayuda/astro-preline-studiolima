---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Kegiatan Studio Lima"

const activityList = [
  {
    title: "Mini Konser",
    description: "Konser rutin yang diselenggarakan di StudioLima setiap enam bulan sekali. Mini Konser bersifat wajib karena setiap penampilan diberikan penilaian berdasarkan beberapa kategori yang telah ditentukan oleh Akademik, penilaian tersebut akan dimasukan ke dalam penilaian hasil akhir belajar siswa/raport."
  },
  {
    title: "Repclass",
    description: "Kelas masal seluruh peserta ujian sebagai simulasi ujian lokal, dipimpin oleh guru-guru musik StudioLima."
  },
  {
    title: "Studioclass",
    description: "Kelas private bagi peserta ujian lokal & internasional sebagai simulasi ujian, dipimpin oleh guru ahli dari Luar StudioLima."
  },
  {
    title: "Masterclassclass",
    description: "Kelas dengan partisipan aktif yang dipimpin oleh praktisi ahli bidangnya, kelas ini dapat disaksikan oleh orang lain sebagai partisipasi pasif."
  },
  {
    title: "Konser Tahunan (Recital/Orchestra)",
    description: "Konser yang diadakan 1-3 tahun sekali di gedung konser khusus. Dengan format penampian disesuaikan dengan tema dan materi konser."
  },
  {
    title: "Konser Keliling",
    description: "Konser yang diadakan dibeberapa tempat dengan penampil dan materi yang sama."
  },
  {
    title: "Kompetisi Musik",
    description: "Merupakan momentum adu bakat antar individu dalam bidang musik. Kompetisi musik dapat diselenggarakan secara intern (oleh Studiolima), Regional maupun internasional."
  },
  {
    title: "Ujian Lokal",
    description: "Ujian yang diselenggarakan enam bulan sekali oleh StudioLima dengan penguji ahli dari luar StudioLima dan guru penguji dari guru-guru StudioLima."
  },
  {
    title: "Ujian Internasional",
    description: "Ujian ini dianjurkan kepada murid yang dianggap sudah mampu dan matang ditingkatnya. Ujian ini memiliki sertifikat internasional dan diselenggarakan dua kali dalam setahun di Jakarta, Bandung dan Surabaya."
  },
]
---
<BaseLayout title={title}>
  <main id="content">
    <div class="max-w-[85rem] mx-auto pt-12 pb-10 px-4 sm:px-6 lg:px-8 md:pt-24">
      <!-- your content goes here ... -->

      <!-- Activity List -->
      <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
        <!-- Title -->
        <div class="max-w-2xl mx-auto text-center mb-10 lg:mb-14">
          <h2 class="text-2xl font-bold md:text-3xl md:leading-tight text-gray-800 dark:text-neutral-200">
            Kegiatan Studio Lima
          </h2>
        </div>
        <!-- End Title -->

        <div class="max-w-5xl mx-auto">
          <!-- Grid -->
          <div class="grid sm:grid-cols-2 gap-6 md:gap-12">
            {activityList.map(activity => 
              <div class="border rounded-xl p-4">
              <h3 class="text-lg font-semibold text-gray-800 dark:text-neutral-200">
                {activity.title}
              </h3>
              <p class="mt-2 text-gray-600 dark:text-neutral-400">
                {activity.description}
              </p>
            </div>
            )}
            <!-- End Col -->
          </div>
          <!-- End Grid -->
        </div>
      </div>
      <!-- End Activity List -->
    </div>
  </main>
</BaseLayout>