        <!-- End Title -->

        <!-- Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {teamList.map(team => <div>
            <div class="flex flex-col rounded-xl p-4 md:p-6 bg-white border border-gray-200 dark:bg-neutral-900 dark:border-neutral-700">
              <div class="flex items-center gap-x-4">
                <img class="rounded-full size-20" src={team.image.src} alt={team.name}>
                <div class="grow">
                  <h3 class="font-medium text-gray-800 dark:text-neutral-200">
                    {team.name}
                  </h3>
                  <p class="text-xs uppercase text-gray-500 dark:text-neutral-500">
                    {team.role}
